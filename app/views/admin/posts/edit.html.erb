<div class='container margin'>
  <div class='row circle'>
    <div class='col'>
    <h2><%= @member.full_name %>さんの投稿編集</h2>
    <%= form_with model: @post,url: admin_post_path(@post.id),local: false do |f| %>
      <div id='errors' class='my-3 text-right'>
        <%= render 'shared/errors', obj: f.object %>
      </div>
      <div class='form-group'>
        <%= f.label :title, 'タイトル' %>&emsp;<span class="badge badge-danger">必須</span><br />
        <%= f.text_field :title,placeholder: 'タイトルをここに',class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :content, '内容' %>&emsp;<span class="badge badge-danger">必須</span><br />
        <%= f.text_area :content,placeholder: '内容をここに',class: 'form-control',rows: "10" %>
      </div>

      <div class='form-group'>
        <%= f.label :name, "タグ (,で区切ると複数タグ登録できます)" %><br />
        <%= f.text_field :name,placeholder: '例）rails,HTML',value: @tag_list,class:"form-control"%>
      </div>

      <div class='form-group'>
        <%= f.label :status, "投稿するか下書き保存するか選択してください" %><br />
        <%= f.select :status, Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"),k]}, {}, {class: "custom-select"} %>
      </div>

      <div class='form-group text-right'>
        <%= f.submit '編集を終える',class: 'btn btn-success' %>
      </div>

    <% end %>
    </div>
  </div>
</div>