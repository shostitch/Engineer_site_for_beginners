<h2><%= @member.full_name %>さんの投稿</h2>

<table class='table'>
  <tbody>
    <tr>
      <th>タイトル</th>
      <td><%= @post.title %></td>
    </tr>

    <tr>
      <th>投稿内容</th>
      <td><%= @post.content %></td>
    </tr>

    <td><%= link_to '編集する', edit_admin_post_path(@post.id) %></td>
    <td><%= link_to '削除する', admin_post_path(@post.id),method: :delete %></td>

    <div>コメント<%= @post.post_comments.count %>件</div>
  </tbody>
</table>

<table class='table'>
  <tbody>
    <% @post.post_comments.each do |post_comment| %>
        <tr>
          <th><%= post_comment.comment %></th>
          <td><%= link_to '削除する', post_post_comment_path(post_comment.post.id, post_comment.id), method: :delete %></td>
        </tr>
      <% end %>
  </tbody>
</table>