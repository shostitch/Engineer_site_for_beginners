<header class="d-flex flex-column">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <%= link_to 'Home', root_path, class: 'navbar-brand p-3 logo' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if member_signed_in? %>
            <%= link_to about_path, class: 'nav-link active' do %>
                <i class="fa-solid fa-graduation-cap"></i>&nbsp;About
              <% end %>

            <li class='nav-item mx-2'>
              <%= link_to  member_path(current_member.id), class: 'nav-link active' do %>
                <i class="fa-solid fa-user"></i>&nbsp;My Page
              <% end %>
            </li>

            <li class='nav-item mx-2'>
              <%= link_to members_path, class: 'nav-link active' do %>
                <i class="fa-solid fa-users"></i>&nbsp;Members
              <% end %>
            </li>

            <li class='nav-item mx-2'>
              <%= link_to  posts_path, class: 'nav-link active' do %>
                <i class="fa-solid fa-file-lines"></i>&nbsp;Posts
              <% end %>
            </li>
            <% if current_member.guest? %>

              <li class='nav-item mx-2'>
                <%= link_to new_post_path, class: 'nav-link active' do %>
                <i class="fa-solid fa-file-circle-plus"></i>&nbsp;New Post
                <% end %>
              </li>

              <li class='nav-item mx-2'>
                <%= link_to confirm_posts_path, class: 'nav-link active' do %>
                  <i class="fa-solid fa-comment-dots"></i>&nbsp;Memo
                <% end %>
              </li>
            <% end %>

            <li class='nav-item mx-2'>
              <%= link_to destroy_member_session_path, method: :delete, class: 'nav-link active' do %>
                <i class="fa-solid fa-right-from-bracket"></i>&nbsp;Log_out
              <% end %>
            </li>

          <% elsif admin_signed_in? %>

            <li class='nav-item mx-2'>
              <%= link_to admin_members_path, class: 'nav-link active' do %>
                <i class="fa-solid fa-users"></i>&nbsp;Members
              <% end %>
            </li>

            <li class='nav-item mx-2'>
              <%= link_to admin_posts_path, class: 'nav-link active' do %>
                <i class="fa-solid fa-file-lines"></i>&nbsp;Posts
              <% end %>
            </li>

            <li class='nav-item mx-2'>
              <%= link_to admin_tags_path, class: 'nav-link active' do %>
                <i class="fa-solid fa-tags"></i>&nbsp;Tags
              <% end %>
            </li>

            <li class='nav-item mx-2'>
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link active' do %>
                <i class="fa-solid fa-right-from-bracket"></i>&nbsp;Log_out
              <% end %>
            </li>

          <% else %>

            <li class='nav-item mx-2'>
              <%= link_to guest_sign_in_path, method: :post, class: 'nav-link active' do %>
                <i class="fa-solid fa-user"></i>&nbsp;guest Log_in（閲覧用）
              <% end %>
            </li>

            <li class='nav-item mx-2'>
              <%= link_to about_path, class: 'nav-link active' do %>
                <i class="fa-solid fa-graduation-cap"></i>&nbsp;About
              <% end %>
            </li>

            <li class='nav-item mx-2'>
              <%= link_to  new_member_registration_path, class: 'nav-link active' do %>
                <i class="fa-solid fa-user-plus"></i>&nbsp;Sign Up
              <% end %>
            </li>

            <li class='nav-item mx-2'>
              <%= link_to new_member_session_path, class: 'nav-link active' do %>
                <i class="fa-solid fa-right-to-bracket"></i>&nbsp;Log_in
              <% end %>
            </li>

          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>