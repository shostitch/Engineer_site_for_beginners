<div class='container main-top'>
  <div class='row'>
    <div class='col-10 offset-2'>
      <h4>＃タグ一覧</h4>
      <table class='table table-striped'>
        <tbody>
          <% if member_signed_in? %>
            <% tag_lists.each do |list| %>
              <% if list.posts.published.count != 0 %>
                <tr>
                  <td>
                    <%=link_to list.name, tag_posts_path(tag_id: list.id) %>
                    <%= "(#{list.posts.published.count})" %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>