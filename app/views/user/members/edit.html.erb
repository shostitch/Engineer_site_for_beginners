<div class='container margin'>
  <div class='row circle'>
    <div class='col'>
      <%= form_with model: @member, url: member_path(@member.id),local: false do |f| %>
        <div id='errors' class='my-3 text-right'>
          <%= render 'shared/errors', obj: f.object %>
        </div>
        <h2>登録者編集</h2>
        <table class='table'>
          <tbody>
            <tr>
              <th><%= f.label :profile_image, 'プロフィール画像' %></th>
              <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
            </tr>
            <tr>
              <th><%= f.label '名前' %>&emsp;<span class="badge badge-danger">必須</span></th>
              <td>
                <div class='row'>
                  <div class='col'>
                    <%= f.text_field :last_name, autofocus: true,placeholder: '性',class: 'form-control' %>
                  </div>
                  <div class='col'>
                    <%= f.text_field :first_name, placeholder: '名',class: 'form-control' %>
                  </div>
                </div>
              </td>
            </tr>

            <tr>
              <th><%= f.label :nickname, 'ニックネーム' %>&emsp;<span class="badge badge-danger">必須</span></th>
              <td><%= f.text_field :nickname, placeholder: 'ぴょん太',class: 'form-control' %></td>
            </tr>

            <tr>
              <th><%= f.label :introduction, '自己紹介' %></th>
              <td><%= f.text_area :introduction, placeholder: 'こんにちわ！よろしくね',rows: '5',class: 'form-control' %></td>
            </tr>

            <tr>
              <th></th>
              <td class='text-right pt-5'><%= f.submit '更新する', class: 'btn btn-success' %></td>
            </tr>

          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>