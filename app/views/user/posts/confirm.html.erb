<div class='container main-top'>
  <div class='row'>
    <div class='col-10'>
      <h2>下書き一覧</h2>
        <table class='table'>
          <thead>
            <tr>
              <th class='col-3'>ニックネーム</th>
              <th class='col-3'>タイトル</th>
              <th class='col-5'>内容</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= link_to post.member.nickname, member_path(post.member_id) %></td>
                <td><%= link_to post.title, post_path(post.id) %></td>
                <td><%= post.content.truncate(30) %></td>
                <td><%= link_to '編集する', edit_post_path(post.id),class: 'btn btn-success' %></td>
                <td><%= link_to '削除する', post_path(post.id),method: :delete, data: { confirm: "削除してもよろしいですか？" },class: 'btn btn-danger' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>