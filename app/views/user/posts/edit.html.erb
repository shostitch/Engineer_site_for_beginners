<h2>投稿編集ページ</h2>

<%= form_with model: @post, url: post_path(@post.id) do |f| %>
  <div>
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :content, '内容' %>
    <%= f.text_field :content %>
  </div>

  <%= f.select :status, Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"),k]}, {}, {class: "custom-select w-25"} %>

  <%= f.submit '更新する', class: 'btn btn-success' %>
<% end %>