<div class='container main-top'>
  <div class='row'>
    <div class='col-2'>
      <%= render 'user/posts/tag_lists', tag_lists: Tag.all %>
    </div>
    <div class='col-10'>
      <h2>投稿一覧</h2>
      <%= render 'user/posts/post_search' %>
      <table class='table'>
        <thead>
          <tr>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>内容</th>
            <th>いいね数</th>
          </tr>
        </thead>
        <tbody>
          <%= render 'user/posts/index', posts: @posts %>
        </tbody>
      </table>
    </div>
  </div>
</div>