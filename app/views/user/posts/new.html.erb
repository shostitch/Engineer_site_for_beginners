<div class='container margin'>
  <div class='row circle'>
    <div class='col'>
      <h2>新規投稿</h2>
      <%= form_with model: @post,url: posts_path,local: false do |f| %>
        <div id='errors' class='my-3 text-right'>
          <%= render 'shared/errors', obj: f.object %>
        </div>

        <div class='form-group'>
          <%= f.label :title, 'タイトル' %>&emsp;<span class="badge badge-danger">必須</span>
          <%= f.text_field :title, placeholder: 'タイトルはここに',class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :content, '内容' %>&emsp;<span class="badge badge-danger">必須</span>
          <%= f.text_area :content, placeholder: '投稿をしてみよう！',class: 'form-control',rows: "10" %>
        </div>

        <div class='form-group'>
          <%= f.label :name, 'タグ' %>
          <%= f.text_field :name,class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :status, '投稿方法を選択' %><br />
          <%= f.select :status, Post.statuses.keys.map{ |k| [t("enums.post.status.#{k}"),k]},{},{class: "custom-select"} %>
        </div>

        <div class='form-group text-right '>
          <%= f.submit '投稿',class: 'btn btn-success' %>
        </div>

      <% end %>
    </div>
  </div>
</div>
