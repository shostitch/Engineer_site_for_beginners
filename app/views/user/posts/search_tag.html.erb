<div class= 'container main-top'>
  <div class='row'>
    <div class='col-10'>
      <h2>タグ検索投稿一覧 <%= "─ #{@tag.name} ─ " %></h2>
      <table class='table'>
        <thead>
          <tr>
            <th>内容</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.content, post %></td>
          </tr>
          <% end %>
        </tbody>


        <div>
          <%= link_to 'ホーム', root_path %>
        </div>
      </table>

    </div>
  </div>
</div>