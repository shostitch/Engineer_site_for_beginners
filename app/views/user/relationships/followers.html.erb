<div class='container margin'>
  <div class='row circle'>
    <div class='col'>
      <h2><%= @member.nickname %>さんのフォロワー一覧</h2>
      <% if @members.exists? %>
        <table class='table'>
          <thead>
            <tr>
              <th>名前</th>
              <th>投稿数</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @members.each do |member| %>
              <tr>
                <td><%= link_to member.full_name, member_path(member.id) %></td>
                <td><%= member.posts.published.count %>件</td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h2>フォローしてくれているメンバーはいません</h2>
      <% end %>
    </div>
  </div>
</div>