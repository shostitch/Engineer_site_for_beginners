<div class='container main-top'>
  <div class='row'>
    <div class='col-10'>
      <% if @members.exists? %>
        <table class='table'>
          <h2>フォロワー一覧</h2>
          <thead>
            <tr>
              <th>名前</th>
              <th>フォロー</th>
              <th>フォロワー</th>
            </tr>
          </thead>
          <tbody>
            <% @members.each do |member| %>
              <tr>
                <td><%= link_to member.full_name, member_path(member.id) %></td>
                <td>フォロー数: <%= member.followings.count %></td>
                <td>フォロワー数: <%= member.followers.count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>